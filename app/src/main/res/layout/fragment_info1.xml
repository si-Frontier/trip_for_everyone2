<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="108.02dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/medium_font_size"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center_vertical"
        android:text="sample address"
        android:id="@+id/info_address_textView"/>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="108.02dp"
        android:background="@drawable/map_background"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_map"
        android:layout_marginRight="@dimen/margin"
        android:id="@+id/info_map_button"
        app:layout_constraintLeft_toRightOf="@+id/info_address_textView"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintTop_toBottomOf="@+id/info_address_textView"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_address_textView"
        android:text="시설 정보"
        android:textSize="@dimen/medium_font_size"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin"
        android:id="@+id/facility_info"
        android:layout_marginTop="@dimen/margin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="@dimen/medium_font_size"
        app:layout_constraintTop_toBottomOf="@+id/facility_info"
        android:layout_marginTop="@dimen/margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>
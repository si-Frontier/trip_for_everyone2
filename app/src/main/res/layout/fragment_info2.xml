<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment2"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="373dp"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/info_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="무장애 정보"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/info_address_textView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가족화장실"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/info_family_toilet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="있음"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장애인화장실"
            android:textSize="15sp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/info_amenities_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="있음"
            android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유아차 대여소"
            android:textSize="15sp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/info_Disabled_toilet_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유아차 보관"
            android:textSize="15sp"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가능함"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수유실"
            android:textSize="15sp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/info_Disabled_parking_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="있음"
            android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휠체어"
            android:textSize="15sp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/info_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진입하기 편리함"
            android:textSize="15sp" />
    </LinearLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintTop_toBottomOf="@+id/info_address_textView"
        android:background="?android:attr/listDivider"
        />




</LinearLayout>